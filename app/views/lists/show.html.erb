<div class="container">
<h2><%= @list.name %></h2>
<ul class="list-group">
  <% @list.bookmarks.each do |bookmark| %>
    <li class="list-group-item"><%= bookmark.comment %></li>
    <%= link_to "Remove",
                  bookmark_path(bookmark),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
  <% end %>
</ul>

<%= link_to "Add new bookmark", new_list_bookmark_path(@list), class:"btn btn-primary" %>
<%= link_to "Back to the lists", lists_path, class:"btn btn-secondary" %>

</div>
